<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_seller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/seller_product_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Status"
            android:layout_below="@id/product_seller_name"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/product_seller_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/seller_product_status"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>


        <TextView
            android:id="@+id/product_seller_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prouct Price"
            android:layout_below="@id/product_seller_image"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/product_seller_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:layout_below="@id/product_seller_price"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            />








    </RelativeLayout>





</androidx.cardview.widget.CardView>