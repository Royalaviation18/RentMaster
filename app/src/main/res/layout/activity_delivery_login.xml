<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryBoy.DeliveryLoginActivity">

    <ImageView
        android:id="@+id/img_db"
        android:layout_width="326dp"
        android:layout_height="290dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/delivery" />

    <TextView
        android:id="@+id/title_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="374dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Delivery Boy Login"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/db_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/title_db"
        android:hint="Email"
        android:drawableRight="@drawable/email"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/db_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/db_login_email"
        android:hint="Password"
        android:drawableRight="@drawable/password"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/db_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/db_login_password"
        android:background="@drawable/buttons"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/db_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_passwords"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/db_login_btn"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/db_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an Account? Sign Up here!"
        android:textSize="15sp"
        android:background="@drawable/buttons"
        android:layout_below="@id/db_forgot"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

</RelativeLayout>