<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.ResetPasswordActivity">


    <RelativeLayout
        android:id="@+id/rl12"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/design_default_color_primary_dark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>




    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@id/rl12"
        android:layout_margin="15dp"
        android:hint="Please Write Your Phone Number"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security  Questions"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/find_phone_number"/>


    <EditText
        android:id="@+id/question_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@id/tv_title"
        android:layout_margin="15dp"
        android:hint="Where Your Parents Met?"/>

    <EditText
        android:id="@+id/question_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@id/question_one"
        android:layout_margin="15dp"
        android:hint="Whats your favourite super hero? "/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:text="Verify"
        android:textColor="@color/white"
        android:layout_below="@id/question_two"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:hint="Whats your favourite super hero? "/>


</RelativeLayout>