<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryBoy.DeliveryRegistrationActivity">


    <ImageView
        android:id="@+id/img_db"
        android:layout_width="300dp"
        android:layout_height="284dp"
        android:foregroundGravity="center"
        android:layout_marginLeft="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/boydeliver" />

    <TextView
        android:id="@+id/title_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_db"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Delivery Boy Registration"
        android:textColor="@android:color/black"
        android:textFontWeight="1"
        android:textSize="24dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/db_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_db"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/input_design"
        android:hint="Name"
        android:drawableRight="@drawable/name_icon"
        android:inputType="text"
        android:padding="15dp"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/db_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/db_name"
        android:hint="Phone"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:drawableRight="@drawable/phonecall"
        android:inputType="phone"
        android:textSize="16dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/db_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/db_phone"
        android:hint="Email"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:inputType="textEmailAddress"
        android:textSize="16dp"
        android:drawableRight="@drawable/email"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/db_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/db_email"
        android:hint="Password"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:drawableRight="@drawable/password"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/db_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/db_password"
        android:background="@drawable/buttons"
        android:text="Register"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        />



</RelativeLayout>